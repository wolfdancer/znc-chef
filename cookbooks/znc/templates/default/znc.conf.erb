AnonIPLimit = 10
ConnectDelay = 5
MaxBufferSize = 500
ProtectWebSessions = true
SSLCertFile = /home/znc/.znc/znc.pem
ServerThrottle = 30
Version = 1.0

<Listener listener0>
	AllowIRC = true
	AllowWeb = true
	Host = ::
	IPv4 = true
	IPv6 = true
	Port = 39221
	SSL = true
</Listener>

<User <%= @irc_nick %>>
	Admin = true
	AltNick = <%= @irc_nick %>_
	AppendTimestamp = false
	AutoClearChanBuffer = true
	Buffer = 500
	ChanModes = +stn
	DenyLoadMod = false
	DenySetBindHost = false
	Ident = <%= @irc_nick %>
	JoinTries = 10
	LoadModule = chansaver
	LoadModule = controlpanel
	MaxNetworks = 1
	MultiClients = true
	Nick = <%= @irc_nick %>
	PrependTimestamp = true
	QuitMsg = bye
	RealName = <%= @irc_realname %>
	StatusPrefix = *
	TimestampFormat = [%H:%M:%S]

	<Network freenode>
		FloodBurst = 4
		FloodRate = 1.00
		IRCConnectEnabled = true
		LoadModule = chansaver
		LoadModule = keepnick
		LoadModule = kickrejoin
		LoadModule = simple_away
		Server = chat.freenode.net +6697

	</Network>
